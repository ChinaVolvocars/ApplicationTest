<?xml version="1.0" encoding="utf-8"?><!--Dialog左边按钮状态选择器-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/height_y_5" />
            <solid android:color="@color/bt_dialog_pressed" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/height_y_5" />
            <solid android:color="@color/bt_dialog_normal" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/height_y_5" />
            <solid android:color="@color/bt_dialog_disable" />
        </shape>
    </item>

</selector>