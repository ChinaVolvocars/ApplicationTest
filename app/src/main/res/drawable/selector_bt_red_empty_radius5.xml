<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bt_red_pressed" />
            <corners android:radius="@dimen/height_y_5" />
            <stroke android:width="@dimen/height_y_1" android:color="@color/bt_red_border" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bt_red_disable" />
            <corners android:radius="@dimen/height_y_5" />
            <stroke android:width="@dimen/height_y_1" android:color="@color/bt_red_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bt_red_normal" />
            <corners android:radius="@dimen/height_y_5" />
            <stroke android:width="@dimen/height_y_1" android:color="@color/bt_red_border" />
        </shape>
    </item>
</selector>